{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es5", "es2020", "dom"],
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["lib/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
